<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abreezy.quickpitchproject.Login.SignUpActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Investor"
        android:id="@+id/investorButton"
        android:layout_above="@+id/investorText"
        android:layout_alignLeft="@+id/entrepreneurButton"
        android:layout_alignStart="@+id/entrepreneurButton"
        android:layout_alignRight="@+id/entrepreneurButton"
        android:layout_alignEnd="@+id/entrepreneurButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrepreneur"
        android:id="@+id/entrepreneurButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Investor vs. Entrepreneur"
        android:id="@+id/titleView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up to be an investor and look at an array of amazing ideas presented by eager entrepreneurs!"
        android:id="@+id/investorText"
        android:textSize="18dp"
        android:layout_above="@+id/entrepreneurButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up to be an entrepreneur and display your idea to a pool of experienced investors!"
        android:id="@+id/entrepreneurText"
        android:textSize="18dp"
        android:layout_below="@+id/entrepreneurButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
