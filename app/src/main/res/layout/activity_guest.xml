<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/guestEntTitle"
        android:text="Entrepreneur Title"
        android:textColor="#b7b7b7"
        android:autoText="false"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/guestProductName"
        android:text="Product Name"
        android:textColor="@color/largeText"
        android:autoText="false"
        android:textAlignment="center"
        android:layout_below="@+id/guestEntTitle"
        android:layout_centerHorizontal="true"
        android:textSize="18dp" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:layout_height="200dp"
        android:layout_width="300dp"
        android:id="@+id/guest_youtube_view"
        android:layout_below="@+id/guestProductName"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:background="@color/tabbedPaneColor"
        android:textColor="@color/textColor"
        android:id="@+id/noButton"
        android:layout_below="@+id/guest_youtube_view"
        android:layout_alignLeft="@+id/guest_youtube_view"
        android:layout_alignStart="@+id/guest_youtube_view"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:background="@color/tabbedPaneColor"
        android:textColor="@color/textColor"
        android:id="@+id/yesButton"
        android:layout_below="@+id/guest_youtube_view"
        android:layout_alignRight="@+id/guest_youtube_view"
        android:layout_alignEnd="@+id/guest_youtube_view"
        android:layout_marginTop="30dp"
        />

