<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">


    <LinearLayout
        style="?android:attr/buttonStyleSmall"
        android:orientation="horizontal"
        android:background="@color/tabbedPaneColor"
        android:paddingLeft="4.0dip"
        android:paddingTop="0.2dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="0.2dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:id="@+id/linearLayout">

        <Button
            android:id="@+id/invProfileButton"
            android:background="@color/tabbedPaneColor"
            android:textColor="@color/textColor"
            android:layout_width="5.0dip" android:layout_height="fill_parent"
            android:text="Profile"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/likesButton"
            android:background="@color/tabbedPaneColor"
            android:textColor="@color/textColor"
            android:layout_width="5.0dip" android:layout_height="fill_parent"
            android:text="Likes"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/FeedButton"
            android:background="@color/tabbedPaneColor"
            android:textColor="@color/textColor"
            android:layout_width="5.0dip" android:layout_height="fill_parent"
            android:text="Feed"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/invConnectionsButton"
            android:background="@color/tabbedPaneColor"
            android:textColor="@color/textColor"
            android:layout_width="20.0dip" android:layout_height="fill_parent"
            android:text="Connections"
            android:layout_weight="1.0" />



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/entTitle"
        android:text="Entrepreneur Title"
        android:textColor="#b7b7b7"
        android:autoText="false"
        android:textAlignment="center"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/productName"
        android:text="Product Name"
        android:textColor="@color/largeText"
        android:autoText="false"
        android:textAlignment="center"
        android:layout_below="@+id/entTitle"
        android:layout_centerHorizontal="true"
        android:textSize="18dp" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:layout_height="200dp"
        android:layout_width="300dp"
        android:id="@+id/youtube_view"
        android:layout_below="@+id/productName"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO"
        android:background="@color/tabbedPaneColor"
        android:textColor="@color/textColor"
        android:id="@+id/noButton"
        android:layout_below="@+id/youtube_view"
        android:layout_alignLeft="@+id/youtube_view"
        android:layout_alignStart="@+id/youtube_view"
        android:layout_marginTop="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YES"
        android:background="@color/tabbedPaneColor"
        android:textColor="@color/textColor"
        android:id="@+id/yesButton"
        android:layout_below="@+id/youtube_view"
        android:layout_alignRight="@+id/youtube_view"
        android:layout_alignEnd="@+id/youtube_view"
        android:layout_marginTop="30dp"
        />

