<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abreezy.quickpitchproject.Entrepreneur.EntSignUpActivity"
    android:contentDescription="xxx">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Entrepreneur Account"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameText"
        android:contentDescription="xxx"
        android:hint="Username"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignRight="@+id/passwordText"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:layout_alignEnd="@+id/passwordText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordText"
        android:hint="@string/passwordHint"
        android:layout_below="@+id/usernameText"
        android:layout_alignLeft="@+id/textView9"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:layout_alignStart="@+id/textView9" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/repeatText"
        android:hint="@string/repeatPasswordHint"
        android:layout_below="@+id/passwordText"
        android:layout_alignStart="@+id/passwordText"
        android:fontFamily="sans-serif"
        android:singleLine="true"
        android:layout_alignLeft="@+id/passwordText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailText"
        android:hint="Email Address"
        android:singleLine="true"
        android:layout_below="@+id/repeatText"
        android:layout_alignLeft="@+id/repeatText"
        android:layout_alignStart="@+id/repeatText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/companyText"
        android:hint="Company Name"
        android:singleLine="true"
        android:layout_below="@+id/emailText"
        android:layout_alignLeft="@+id/emailText"
        android:layout_alignStart="@+id/emailText"
        android:layout_alignRight="@+id/emailText"
        android:fontFamily="sans-serif"
        android:layout_alignEnd="@+id/emailText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productText"
        android:hint="Product Name"
        android:singleLine="true"
        android:layout_below="@+id/companyText"
        android:layout_alignStart="@+id/companyText"
        android:layout_alignEnd="@+id/companyText"
        android:layout_alignLeft="@+id/companyText"
        android:fontFamily="sans-serif"
        android:layout_alignRight="@+id/companyText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextButton"
        android:elegantTextHeight="true"
        android:layout_alignParentBottom="true"
        android:fontFamily="sans-serif"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/youtubeText"
        android:layout_below="@+id/productText"
        android:layout_alignLeft="@+id/productText"
        android:layout_alignStart="@+id/productText"
        android:layout_alignRight="@+id/productText"
        android:singleLine="true"
        android:fontFamily="sans-serif"
        android:layout_alignEnd="@+id/productText"
        android:hint="YouTube URL" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productDescriptionText"
        android:layout_below="@+id/youtubeText"
        android:layout_above="@+id/nextButton"
        android:background="@drawable/edit_text_style"
        android:gravity="top|left"
        android:editable="true"
        android:inputType="textMultiLine"
        android:hint="Enter your product information..."
        android:layout_alignLeft="@+id/youtubeText"
        android:layout_alignStart="@+id/youtubeText"
        android:fontFamily="sans-serif"
        android:layout_alignRight="@+id/youtubeText"
        android:layout_alignEnd="@+id/youtubeText" />

</RelativeLayout>
